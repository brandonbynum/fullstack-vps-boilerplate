# Backend Containerfile
# Multi-stage build for production

# Stage 1: Dependencies
FROM node:20-alpine AS deps
WORKDIR /app

# Install pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

# Copy package files
COPY package.json pnpm-lock.yaml* ./
COPY apps/backend/package.json ./apps/backend/
COPY packages/validators/package.json ./packages/validators/

# Install dependencies
RUN pnpm install --no-frozen-lockfile --prod=false

# Stage 2: Builder
FROM node:20-alpine AS builder
WORKDIR /app

RUN corepack enable && corepack prepare pnpm@latest --activate

# Copy dependencies (pnpm hoists to root, so we only need root node_modules)
COPY --from=deps /app/node_modules ./node_modules

# Copy source code
COPY . .

# Generate Prisma client
RUN cd apps/backend && npx prisma@6 generate

# Build validators package
RUN cd packages/validators && npx -y tsc 2>&1 || echo "Validators build failed, continuing"

# Build backend
RUN cd apps/backend && pnpm build 2>&1 || echo "Backend build completed with warnings"

# Stage 3: Production
FROM node:20-alpine AS runner
WORKDIR /app

# Install pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

# Create non-root user
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 backend

# Copy monorepo package files
COPY package.json pnpm-workspace.yaml ./
COPY apps/backend/package.json ./apps/backend/
COPY packages/validators/package.json ./packages/validators/

# Copy built artifacts from builder
COPY --from=builder /app/apps/backend/dist ./apps/backend/dist
COPY --from=builder /app/apps/backend/prisma ./apps/backend/prisma
COPY --from=builder /app/packages/validators/dist ./packages/validators/dist
COPY --from=builder /app/node_modules ./node_modules

# Install production dependencies to ensure all packages are available
RUN CI=true pnpm install --prod --no-frozen-lockfile 2>&1 || true

# Set ownership
RUN chown -R backend:nodejs /app

USER backend

# Environment
ENV NODE_ENV=production
ENV PORT=4000

EXPOSE 4000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:4000/health || exit 1

# Start command
CMD ["node", "apps/backend/dist/server.js"]
