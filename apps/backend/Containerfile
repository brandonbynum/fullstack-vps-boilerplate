# Backend Containerfile
# Multi-stage build

# Stage 1: Dependencies
FROM node:20-alpine AS deps
WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy package files
COPY package.json pnpm-lock.yaml* pnpm-workspace.yaml* ./
COPY apps/backend/package.json ./apps/backend/
COPY packages/validators/package.json ./packages/validators/

# Install dependencies
RUN pnpm install --no-frozen-lockfile --prod=false

# Stage 2: Development / Source (Stop here for dev)
FROM node:20-alpine AS dev
WORKDIR /app

RUN npm install -g pnpm

# Copy dependencies
COPY --from=deps /app/node_modules ./node_modules

# Copy source code
COPY . .

# Generate Prisma client (needed for dev and build)
RUN cd apps/backend && npx prisma@6 generate

# Stage 3: Builder (Production Build)
FROM dev AS builder
WORKDIR /app

# Build validators package
RUN cd packages/validators && pnpm build

# Build backend
RUN cd apps/backend && pnpm build

# Stage 4: Production Runner
FROM node:20-alpine AS runner
WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Create non-root user
RUN addgroup --system --gid 1001 nodejs &&     adduser --system --uid 1001 backend

# Copy package files for production install
COPY --from=builder /app/package.json /app/pnpm-workspace.yaml /app/pnpm-lock.yaml ./
COPY --from=builder /app/apps/backend/package.json ./apps/backend/
COPY --from=builder /app/packages/validators/package.json ./packages/validators/

# Install production dependencies only
RUN pnpm install --prod --frozen-lockfile

# Copy built code and generated files
COPY --from=builder /app/apps/backend/dist ./apps/backend/dist
COPY --from=builder /app/apps/backend/prisma ./apps/backend/prisma
COPY --from=builder /app/packages/validators/dist ./packages/validators/dist

# Generate Prisma client in production environment
RUN cd apps/backend && npx prisma@6 generate

# Set ownership
RUN chown -R backend:nodejs /app

USER backend

# Environment
ENV NODE_ENV=production
ENV PORT=4000

EXPOSE 4000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3     CMD wget --no-verbose --tries=1 --spider http://localhost:4000/health || exit 1

# Start command
CMD ["node", "apps/backend/dist/server.js"]
